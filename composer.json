{
    "name": "everware/laravel-fortify-sanctum",
    "description": "Automatically integrate Laravel Fortify with Laravel Sanctum so Fortify gives out Sanctum tokens on login while maintaining default Fortify functionality like two factor authentication. Also allows the use of 'api' middleware and makes login/sessions work without cookies (makes Fortify \"stateless\"-ish by creating temporary sessions).",
    "type": "library",
    "readme": "README.md",
    "license": "MIT",
    "require": {
        "laravel/fortify": "^1.30",
        "laravel/sanctum": "^4.2",
        "laravel/framework": "^12.0",
        "illuminate/support": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Everware\\LaravelFortifySanctum\\": "src/",
            "Everware\\LaravelFortifySanctum\\Tests\\Concerns\\": "tests/Concerns"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Everware\\LaravelFortifySanctum\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Everware\\LaravelFortifySanctum\\Providers\\FortifySanctumServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "authors": [
        {
            "name": "Ken van der Eerden",
            "email": "support+laravel-fortify-sanctum@everware.nl"
        }
    ]
}
